<%= render "shared/loader" %>

<%- model_class = Course -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Cursos</h5>
    <ol class="breadcrumbs">
        <li>Cadastros</li>
        <li class="active">Cursos</li>
    </ol>
  </div>
</div>
<br>
<div class="card-panel">
  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width: 5%">ID</th>
        <th style="width: 65%">Nome do curso</th>
        <th style="width: 15%">Criado em</th>
        <th style="width: 15%; text-align: center">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= link_to course.id, course_path(course) %></td>
          <td><%= course.description %></td>
          <td><%=l course.created_at, format: :short %></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, course_path(course), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_course_path(course), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_course_path,
              :class => 'btn btn-primary' %>
</div>
