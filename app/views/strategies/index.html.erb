<%= render "shared/loader" %>

<%- model_class = Strategy -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Estratégias</h5>
    <ol class="breadcrumbs">
        <li>Cadastros</li>
        <li class="active">Estratégias</li>
    </ol>
  </div>
</div>
<br>
<div class="card-panel">
  <table class="table">
    <thead>
      <tr>
        <th style="width: 5%">ID</th>
         <th style="width: 40%">Descrição</th>
         <th style="width: 25%">Categorias</th>
         <th style="width: 15%">Criado em</th>
         <th style="width: 15%; text-align: center">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @strategies.each do |strategy| %>
        <tr>
          <td><%= link_to strategy.id, strategy_path(strategy) %></td>
          <td><%= strategy.description %></td>
          <td><%= strategy.category.desctipion %></td>
          <td><%=l strategy.created_at, format: :short %></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, strategy_path(strategy), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_strategy_path(strategy), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_strategy_path,
              :class => 'waves-effect waves-light btn' %>

</div>
