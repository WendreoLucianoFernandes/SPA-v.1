<%= render "shared/loader" %>

<%- model_class = Category -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Domínios Cognitivos</h5>
    <ol class="breadcrumbs">
        <li>Cadastros</li>
        <li class="active">Domínios Cognitivos</li>
    </ol>
  </div>
</div>
<br>
<div class="card-panel">
  <table class="table">
    <thead>
      <tr>
        <th style="width: 2%">ID</th>
        <th style="width: 20%">Descrição</th>
        <th style="width: 48%">Descrição Completa</th>
        <th style="width: 15%">Criado em</th>
        <th style="width: 15%; text-align: center">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= link_to category.id, category_path(category) %></td>
          <td><%= category.desctipion %></td>
          <td><%= category.long_description %></td>
          <td><%=l category.created_at, format: :short %></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, category_path(category), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_category_path(category), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to "Novo",
              new_category_path,
              :class => 'waves-effect waves-light btn' %>

</div>
