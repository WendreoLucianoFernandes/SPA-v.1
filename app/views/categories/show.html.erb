<%- model_class = Category -%>
<div class="page-header">
  <h1>Domínio Cognitivo</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Descricao:</strong></dt>
  <dd><%= @category.desctipion %></dd>
</dl>

<dl class="dl-horizontal">
  <dt><strong>Descrição longa:</strong></dt>
  <dd><%= @category.long_description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_category_path(@category), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza?')) },
              :class => 'btn btn-danger' %>
