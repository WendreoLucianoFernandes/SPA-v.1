<div class="card-panel">

  <%= form_for @specific_skill, :html => { :class => "form-horizontal specific_skill" } do |f| %>

    <% if @specific_skill.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@specific_skill.errors.count, "error") %> prohibited this specific_skill from being saved:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @specific_skill.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_field :description%>
      </div>
    </div>

    <br>

    <div class="row">
      <%= f.submit nil, :class => 'waves-effect waves-light btn cyan' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                specific_skills_path, :class => 'waves-effect waves-light btn' %>
    </div>    

  <% end %>

</div>
