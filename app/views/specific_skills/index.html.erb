<%= render "shared/loader" %>

<%- model_class = SpecificSkill -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Competências Específicas</h5>
    <ol class="breadcrumbs">
        <li>Cadastros</li>
        <li class="active">Competências Específicas</li>
    </ol>
  </div>
</div>
<br>
<div class="card-panel">

  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width: 5%"><%= 'ID' %></th>
        <th style="width: 65%"><%= model_class.human_attribute_name(:description) %></th>
        <th style="width: 15%"><%= model_class.human_attribute_name(:created_at) %></th>
        <th style="width: 15%; text-align: center"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @specific_skills.each do |specific_skill| %>
        <tr>
          <td><%= link_to specific_skill.id, specific_skill_path(specific_skill) %></td>
          <td><%= specific_skill.description %></td>
          <td><%=l specific_skill.created_at, format: :short%></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, specific_skill_path(specific_skill), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_specific_skill_path(specific_skill), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_specific_skill_path,
              :class => 'waves-effect waves-light btn' %>

</div>
