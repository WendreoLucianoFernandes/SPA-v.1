<div class="card-panel">

  <%= form_for @activity, :html => { :class => "form-horizontal activity" } do |f| %>

    <% if @activity.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@activity.errors.count, "error") %> impedem a atividade de ser salva:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @activity.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_field :description%>
      </div>
    </div>
    <br>
    <div class="row">
      <%= f.submit nil, :class => 'waves-effect waves-light btn cyan' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                activities_path, :class => 'waves-effect waves-light btn' %>
    </div>

  <% end %>

</div>
