<%- model_class = CourseModule -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Módulo do Curso'%></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @course_module.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course_id) %>:</strong></dt>
  <dd> <%= @course_module.course.description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              course_modules_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_course_module_path(@course_module), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              course_module_path(@course_module),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Você tem certeza ?')) },
              :class => 'btn btn-danger' %>
