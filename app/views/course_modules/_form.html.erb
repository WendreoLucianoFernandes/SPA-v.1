<%= form_for @course_module, :html => { :class => "form-horizontal course_module" } do |f| %>

  <% if @course_module.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@course_module.errors.count, "error") %> prohibited this course_module from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @course_module.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :course_id, Course.all, :id, :description, include_blank: true %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-3">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>


  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                course_modules_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
