<%= render "shared/loader" %>

<%- model_class = PlaneClassroom -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Planos de Aula</h5>
    <ol class="breadcrumbs">
        <li><a href="index.html">Cadastros</a></li>
        <li class="active">Planos de Aula</li>
    </ol>
  </div>
</div>
<br>

<div class="card-panel">

  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width: 3%">ID</th>
        <th style="width: 23%">Unidade de estudo</th>
        <th style="width: 32%">Curso</th>
        <th style="width: 7%">Ano</th>
        <th style="width: 9%">Semestre</th>
        <th style="width: 16%">Criado em</th>
        <th style="width: 10%; text-align: center"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @plane_classrooms.each do |plane_classroom| %>
        <tr>
          <td><%= link_to plane_classroom.id, plane_classroom_path(plane_classroom) %></td>
          <td><%= plane_classroom.study_unit.description %></td>
          <td><%= plane_classroom.course.description %></td>
          <td><%= plane_classroom.year %></td>
          <td><%= plane_classroom.semester %></td>
          <td><%=l plane_classroom.created_at, format: :short %></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, plane_classroom_path(plane_classroom), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_plane_classroom_path(plane_classroom), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br><br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_plane_classroom_path,
              :class => 'btn btn-primary' %>

</div>
