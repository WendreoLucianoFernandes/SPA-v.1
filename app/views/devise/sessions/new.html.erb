<%= render "shared/loader" %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form", html: { role: "form" }) do |f| %>
  <div class="row">
    <div class="input-field col s12 center">
      <img src="/logo.jpg" alt="" class="responsive-img valign">
      <p class="center login-form-text"><b>S</b>ISTEMA DE <b>P</b>LANEJAMENTO DE <b>A</b>ULA</p>
    </div>
  </div>
  <br><br>
  <div class="row margin">
    <div class="input-field col s12">
      <i class="mdi-communication-email prefix"></i>
      <%= f.text_field :email, autofocus: true%>
      <%= f.label :email, class: "center-align" %>
    </div>
  </div>
  <div class="row margin">
    <div class="input-field col s12">
      <i class="mdi-action-lock-outline prefix"></i>
      <%= f.password_field :password, autocomplete: "off" %>
      <%= f.label :password %>
    </div>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="row">
      <div class="input-field col s12 m12 l12  login-text">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Lembre-me" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="input-field col s12">
      <%= f.submit  t('.sign_in', :default => "Acessar"), class: "btn col s12" %>
    </div>
  </div>
  <div class="row">
    <%= render "devise/shared/links" %>
  </div>

<% end %>
