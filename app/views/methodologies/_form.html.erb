<div class="card-panel">

  <%= form_for @methodology, :html => { :class => "form-horizontal methodology" } do |f| %>

    <% if @methodology.errors.any? %>
      <div id="error_expl" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(@methodology.errors.count, "error") %> impedem a metodologia de ser salva:</h3>
        </div>
        <div class="panel-body">
          <ul>
          <% @methodology.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="input-field col s12">
        <%= f.label :description %>
        <%= f.text_field :description%>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <%= f.label :long_description %>
        <%= f.text_area :long_description, cols: 5, rows: 10, :class => 'materialize-textarea' %>
      </div>
    </div>

    <br>
    <div class="row">
      <%= f.submit nil, :class => 'waves-effect waves-light btn cyan' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                methodologies_path, :class => 'waves-effect waves-light btn' %>
    </div>

  <% end %>

</div>
