<%- model_class = Methodology -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @methodology.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long_description) %>:</strong></dt>
  <dd><%= @methodology.long_description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              methodologies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_methodology_path(@methodology), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              methodology_path(@methodology),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
