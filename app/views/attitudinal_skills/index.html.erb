<%= render "shared/loader" %>

<%- model_class = AttitudinalSkill -%>
<div class="row">
  <div class="col s12 m12 l12">
    <h5 class="breadcrumbs-title">Competências Atitudinais</h5>
    <ol class="breadcrumbs">
        <li>Cadastros</li>
        <li class="active">Competências Atitudinais</li>
    </ol>
  </div>
</div>
<br>
<div class="card-panel">
  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width: 2%"><%= 'ID' %></th>
        <th style="width: 26%"><%= 'Tipo' %></th>
        <th style="width: 44%"><%= 'Descrição'%></th>
        <th style="width: 14%"><%= 'Criado em' %></th>
        <th style="width: 14%; text-align: center"><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% @attitudinal_skills.each do |attitudinal_skill| %>
        <tr>
          <td><%= link_to attitudinal_skill.id, attitudinal_skill_path(attitudinal_skill) %></td>
          <td><%= attitudinal_skill.tipo %></td>
          <td><%= attitudinal_skill.Description %></td>
          <td><%=l attitudinal_skill.created_at, format: :short %></td>
          <td style="text-align: center">
            <%=link_to "<i class='material-icons'>delete</i>".html_safe, attitudinal_skill_path(attitudinal_skill), method: :delete, class: "waves-effect waves-circle btn-floating secondary-content" %>
            <%=link_to "<i class='material-icons'>edit</i>".html_safe, edit_attitudinal_skill_path(attitudinal_skill), class: "waves-effect waves-circle btn-floating secondary-content cyan" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_attitudinal_skill_path,
              :class => 'waves-effect waves-light btn' %>

</div>
