<%- model_class = SpecificTechnicalCompetence -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= 'ID' %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @specific_technical_competences.each do |specific_technical_competence| %>
      <tr>
        <td><%= link_to specific_technical_competence.id, specific_technical_competence_path(specific_technical_competence) %></td>
        <td><%= specific_technical_competence.description %></td>
        <td><%=l specific_technical_competence.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_specific_technical_competence_path(specific_technical_competence), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      specific_technical_competence_path(specific_technical_competence),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_specific_technical_competence_path,
            :class => 'btn btn-primary' %>
